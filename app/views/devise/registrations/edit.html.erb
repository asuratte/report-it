<h2 class="mb-3">Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field mb-3">
    <%= f.label :email, :class => 'form-label required' %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => 'form-control' %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field mb-3">
    <%= f.label :password, :class => 'form-label' %> <i>(leave blank if you don't want to change it)</i>
    <%= f.password_field :password, autocomplete: "new-password", :class => 'form-control' %>
    <% if @minimum_password_length %>

      <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>

  <div class="field mb-3">
    <%= f.label :password_confirmation, :class => 'form-label' %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", :class => 'form-control' %>
  </div>

  <div class="field mb-3">
    <%= f.label :current_password, :class => 'form-label required' %> <i>(we need your current password to confirm your changes)</i>
    <%= f.password_field :current_password, autocomplete: "current-password", :class => 'form-control' %>
  </div>

  <div class="field mb-3">
    <%= f.label :first_name, 'First Name', :class => 'form-label required' %>
    <%= f.text_field :first_name, :class => 'form-control' %>
  </div>

  <div class="field mb-3">
    <%= f.label :last_name, 'Last Name', :class => 'form-label required' %>
    <%= f.text_field :last_name, :class => 'form-control' %>
  </div>

  <div class="field mb-3">
    <%= f.label :username, 'Username', :class => 'form-label required' %>
    <%= f.text_field :username, :class => 'form-control' %>
  </div>

  <div class="field mb-3">
    <%= f.label :address1, 'Address 1', :class => 'form-label required' %>
    <%= f.text_field :address1, :class => 'form-control' %>
  </div>

  <div class="field mb-3">
    <%= f.label :address2, 'Address 2', :class => 'form-label' %>
    <%= f.text_field :address2, :class => 'form-control' %>
  </div>
  <div class="row">
    <div class="col-md-6">
      <div class="field mb-3">
        <%= f.label :city, 'City', :class => 'form-label required' %>
        <%= f.text_field :city, :class => 'form-control' %>
     </div>
    </div>
    <div class="col-md-4">
      <div class="field mb-3">
        <%= f.label :state, 'State', :class => 'form-label required' %>
        <%= f.select(:state, options_for_select(us_states, :selected => f.object.state), {}, { :class => 'form-select' }) %>
      </div>
    </div>
    <div class="col-md-2">
      <div class="field mb-3">
        <%= f.label :zip, 'Zip', :class => 'form-label required' %>
        <%= f.text_field :zip, :class => 'form-control' %>
      </div>
    </div>
  </div>

  <div class="field mb-3">
    <%= f.label :phone, 'Phone', :class => 'form-label required' %>
    <%= f.text_field :phone, :class => 'form-control' %>
  </div>

  <br>
  <span class="actions button-float">
    <%= f.submit "Update", :class => 'btn btn-primary' %>
  </span>
<% end %>

<h3 class="mt-5 mb-3">Cancel my account</h3>

<p><%= button_to "Cancel account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, :class => 'btn btn-primary mb-3' %></p>

<%= link_to "Back", :back %>
