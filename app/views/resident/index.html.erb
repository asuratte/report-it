<h1 class="text-center">Resident Dashboard</h1>
<div class="row">
    <div class="col-md">
        <h2 class="text-center">Create New Report</h2>
        <div class="accordion" id="accordionCategories">
        <% get_categories.each_with_index do |category, i| %>
            <div class="accordion-item">
                <h2 class="accordion-header" id="category<%= i %>">
                    <button class="accordion-button" type="button" data-bs-toggle="collapse"
                        data-bs-target="#collapse<%= i %>" aria-expanded="true" aria-controls="collapse<%= i %>">
                        <%= category %>
                    </button>
                </h2>

                <div id="collapse<%= i %>" class="accordion-collapse collapse" aria-labelledby="heading<%= i %>"
                    data-bs-parent="#accordionCategories">
                    <div class="accordion-body">
                        <div class="list-group">
                            <% get_subcategories_by_category(category).each do |subcategory| %>
                                <%= link_to subcategory, new_report_path(category: category, subcategory:
                                    subcategory), class: "py-1 list-group-item list-group-item-action" %>
                                    <% end %>
                        </div>
                    </div>
                </div>
            </div>
        <% end %>
        </div>
    </div>
    <div class="col-md">
    </div>
</div>