<h1 class="text-center">Officials Dashboard</h1>
  <div class="row justify-content-between">
    <div class="col-lg-12">
      <h2 class="text-center mb-3">Reports</h2>
        <table class="table">
          <thead>
            <tr>
              <th>Date Reported</th>
              <th>Report Type</th>
              <th>Status</th>
              <th>Severity</th>
            </tr>
          </thead>

          <tbody>
            <% if @reports.count> 0 %>
              <% @reports.each do |report| %>
                <tr>
                  <td>
                    <%= report.created_at.to_date %>
                  </td>
                  <td>
                    <%= link_to report.subcategory, report %>
                  </td>
                  <td>
                    <%= report.status %>
                  </td>
                  <td>
                    <%= report.severity %>
                  </td>
                </tr>
                <% end %>
                <% else %>
                  <tr>
                    <td colspan="3" class="py-3">No reports submitted.</td>
                  </tr>
                <% end %>
          </tbody>
        </table>
        <%== pagy_bootstrap_nav(@pagy) if @pagy.pages > 1 %>
    </div>
  </div>
