<p id="notice"><%= notice %></p>

<h1>Followed Reports</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Report</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @followed_reports.each do |followed_report| %>
      <tr>
        <td><%= followed_report.user_id %></td>
        <td><%= followed_report.report_id %></td>
        <td><%= link_to 'Show', followed_report %></td>
        <td><%= link_to 'Edit', edit_followed_report_path(followed_report) %></td>
        <td><%= link_to 'Destroy', followed_report, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

