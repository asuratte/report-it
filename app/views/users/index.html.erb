<div class="container">
<p id="notice"><%= notice %></p>

<h1>Users</h1>

<table class="table">
  <thead>
    <tr>
      <th>Username</th>
      <th>Role</th>
      <th>Active</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.username %></td>
        <td><%= user.role %></td>
        <td><%= user.active %></td>
        <td><%= link_to 'View User', user %></td>
        <td><%= link_to 'Edit User', edit_user_path(user) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

</div>