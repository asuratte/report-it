<p>
  <strong>Category:</strong>
  <%= @report.category %> - <%= @report.subcategory %>
</p>

<p>
  <strong>Status:</strong>
  <%= @report.status %>
</p>

<% if user_signed_in? %>
  <% if current_user.is_official? || current_user.is_admin? %>
    <p>
      <strong>Severity:</strong>
      <%= @report.severity %>
    </p>
  <% end %>
<% end %>

<% if @report.address1? %>
<p>
  <strong>Address1:</strong>
  <%= @report.address1 %>
</p>
<% end %>

<% if @report.address2? %>
<p>
  <strong>Address2:</strong>
  <%= @report.address2 %>
</p>
<% end %>

<p>
  <strong>City:</strong>
  <%= @report.city %>
</p>

<p>
  <strong>State:</strong>
  <%= @report.state %>
</p>

<p>
  <strong>Zip:</strong>
  <%= @report.zip %>
</p>

<p>
  <strong>Description:</strong>
  <%= @report.description %>
</p>

<div>
  <% if @report.image.attached? && @report.image.representable? %>
  <p>
    <strong>Image:</strong>
  </p>
  <%= image_tag @report.image %>
  <% end %>
</div>


<br>

<!-- Only display if user is Official/Admin/Or the report writer -->
<% if user_signed_in? %>
  <% if (current_user == @report.user && @report.status == "New") || current_user.is_official? || current_user.is_admin? %>
    <%= button_to 'Edit', edit_report_path(@report), class: "btn btn-primary button-float" %>
  <% end %>
<% end %>

<%= button_to 'Back', url_for(:back), :method => :get, class: "btn btn-primary button-float" %>