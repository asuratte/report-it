<p id="notice"><%= notice %></p>

<h1>Reports</h1>

<table>
  <thead>
    <tr>
      <th>Address1</th>
      <th>Address2</th>
      <th>City</th>
      <th>State</th>
      <th>Zip</th>
      <th>Description</th>
      <th>Category</th>
      <th>Subcategory</th>
      <th>Status</th>
      <th>Severity</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reports.each do |report| %>
      <tr>
        <td><%= report.address1 %></td>
        <td><%= report.address2 %></td>
        <td><%= report.city %></td>
        <td><%= report.state %></td>
        <td><%= report.zip %></td>
        <td><%= report.description %></td>
        <td><%= report.category %></td>
        <td><%= report.subcategory %></td>
        <td><%= report.status %></td>
        <td><%= report.severity %></td>
        <td><%= report.user_id %></td>
        <td><%= link_to 'Show', report %></td>
        <td><%= link_to 'Edit', edit_report_path(report) %></td>
        <td><%= link_to 'Destroy', report, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Report', new_report_path %>
