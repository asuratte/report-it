<h1 class="text-center mb-4">Explore All Reports</h1>
<table class="mb-3">
  <thead>
    <tr>
      <th scope="col">Date Created</th>
      <th scope="col">Category</th>
      <th scope="col">Description</th>
      <th scope="col">Zip</th>
      <th scope="col">Status</th>
    </tr>
  </thead>

  <tbody>
    <% @reports.each do |report| %>
      <tr class="<%= cycle('list_line_odd', 'list_line_even') %>">
        <td data-label="Date Created"><%= report.created_at.to_date %></td>
        <td data-label="Category"><%= link_to report.subcategory, report %></td>
        <td data-label="Description"><%= truncate(report.description, length: 30) %></td>
        <td data-label="Zip"><%= report.zip %></td>
        <td data-label="Status"><%= report.status %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%== pagy_bootstrap_nav(@pagy) %>
