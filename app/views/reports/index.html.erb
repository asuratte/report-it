<div class="container">
  <h1 class="text-center">Explore All Reports</h1>
  <% if user_signed_in? && current_user.is_resident? %>
    <%= render 'resident/nav_cards' %>
  <% end %>
  <table class="table">
    <thead>
      <tr>
        <th>Date Created</th>
        <th>Category</th>
        <th>Description</th>
        <th>City</th>
        <th>State</th>
        <th>Zip</th>
        <th>Status</th>
        <th colspan="2"></th>
      </tr>
    </thead>
  
    <tbody>
      <% @reports.each do |report| %>
        <tr>
          <td><%= report.created_at.to_date %></td>
          <td><%= report.subcategory %></td>
          <td><%= truncate(report.description, length: 40) %></td>
          <td><%= report.city %></td>
          <td><%= report.state %></td>
          <td><%= report.zip %></td>
          <td><%= report.status %></td>
          <td><%= link_to 'Show', report %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%== pagy_bootstrap_nav(@pagy) %>
  
</div>
